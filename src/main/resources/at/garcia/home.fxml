                <Button onAction="#switchToToursView" text="Switch to see all tours view"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
        <VBox alignment="CENTER" minHeight="50" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Tour Planer"/>
        </VBox>

        <VBox alignment="CENTER" maxWidth="120.0" prefHeight="339.0" prefWidth="109.0" GridPane.halignment="CENTER"
              GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <ImageView fitHeight="57.0" fitWidth="50.0" preserveRatio="true" VBox.vgrow="ALWAYS">
                <Image url="@../../img/test1.png"/>
            </ImageView>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </VBox>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="150.0" minWidth="100.0" prefWidth="124.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="274.0" minWidth="200.0" prefWidth="256.6666666666667"/>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="80.0" minHeight="55.0" prefHeight="80.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="3.0" minHeight="2" prefHeight="2" vgrow="NEVER"/>
        <RowConstraints maxHeight="333.0" minHeight="286.0" prefHeight="286.0" vgrow="ALWAYS"/>
    </rowConstraints>
</GridPane>
