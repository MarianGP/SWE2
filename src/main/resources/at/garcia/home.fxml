<GridPane alignment="center" gridLinesVisible="true" hgap="10" maxWidth="600.0" minHeight="400.0" minWidth="400.0"
          prefHeight="400.0" prefWidth="400.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.garcia.controller.HomeController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Label text="Add new tour"/>
                <Button alignment="TOP_LEFT" onAction="#switchToSecondary" text="Switch to add tours view"/>
                <Line endX="100.0" rotate="-90.0" startX="-100.0" translateX="-100.0"/>
